  <body>
    <%- include('../includes/nav.ejs') %>
    <main>
      <% if(prods.length > 0) { %>
      <h1>This is shop Page</h1>
      <ul>
        <% for (let product of prods) { %>
        <li><%= product.title %></li>
        <p>Price: <%= product.price %></p>
        <p>Description  <%= product.description %></p>
        <% } %>
      </ul>
      <% } else { %>
      <h1>No Products Found!</h1>
      <% } %>
    </main>
<%- include('../includes/end.ejs') %>
